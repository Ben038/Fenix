<div class='container container-login'>
  <div class="container-form">
    <%= simple_form_for(User.new, url: session_path(User.new)) do |f| %>
    <div class="form-inputs">
      <h2 class='logintext text-left'>Log in</h2>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <!-- <%= f.input :remember_me, as: :boolean  %> -->
    </div>

    <div >
      <%= f.button :submit, "Log in", class: "btn btn-yellow"%>
      <%= link_to "Back", root_path, class: "btn btn-yellow"%>
    </div>
      <% end %>
  </div>
</div>
<%#= render "devise/shared/links" %>
