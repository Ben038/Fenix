<div class="navbar navbar-expand-sm navbar-light navbar-fenix">
  <%= link_to root_path, class: "navbar-brand" do %>
    <h2> fenix <%= image_tag "logo.png" %> </h2>
    <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Mail to your teammates</a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% all_team = User.all.where("id != ?", current_user.id) %>
            <% team = all_team.where("international_client_id = #{current_user.international_client_id}") %>
            <% team.each do |member| %>
              <%= link_to member.first_name, "rails/mailers/user_mailer/welcome.html", class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
        <li class="nav-item active d-flex align-items-center">
          <%= link_to "Claims", claims_path, class: "nav-link"  %>
        </li>
        <li class="nav-item d-flex align-items-center">
          <%= link_to "Commissions", commissions_path, class: "nav-link"  %>
        </li>
          <p class="d-flex align-items-center">Hi, <%= current_user.first_name %></p>
        <li class="nav-item dropdown">
          <% if !current_user.profile_picture %>
            <%= image_tag "placeholder.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag current_user.profile_picture, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Upload Data", new_file_upload_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <!-- <ul class="nav-item">
          <li> <%= link_to "Login", new_user_session_path, class: "nav-link" %>  </li>
        </ul> -->
      <% end %>
    </ul>
  </div>
</div>
