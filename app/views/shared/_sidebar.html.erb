
<div class="sidebar" id='id-sidebar'>
  <div class="sidebar-main open" id="sidebar-main-js">

    <a href="javascript:void(0)" class="closebtn" id="close-sidebar-btn-js">
      <i id="icon" class="fas fa-angle-double-left"></i>
    </a>

    <form>
      <p>Balance Year</p>
        <% @select_years.each do |year| %>
          <% checked = @checked_values[:balance_year].include?(year.to_s)  %>
          <li><%= check_box_tag "balance_year[#{year}]", year, checked %>
          <%= label_tag year %></li>
        <% end %>

      <p>Countries</p>
      <% @select_countries.each do |country| %>
        <% checked = @checked_values[:country].include?(country)  %>
          <li><%= check_box_tag "country[#{country}]", country, checked %>
          <%= label_tag country %></li>
         <% end %>

      <p>Networks</p>
        <% @select_networks.each do |network| %>
          <% checked = @checked_values[:reinsurance_network].include?(network)  %>
          <li><%= check_box_tag "network[#{network}]", network, checked %>
          <%= label_tag network %></li>
        <% end %>

      <p><input type="submit" value="Filter" class="sidebar-btn-yellow"></p>
    </form>

  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle sidebar-btn-yellow" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Mail to Team</a>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <% all_team = User.all.where("id != ?", current_user.id) %>
        <% team = all_team.where("international_client_id = #{current_user.international_client_id}") %>
        <% team.each do |member| %>
          <%= button_to "#{member.first_name}", share_page_with_options_pages_path(user_id: member.id, shared_url: request.original_url, remote: true, method: :post) %>
        <% end %>
      </div>
  </li>

