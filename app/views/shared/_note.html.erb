<strong>Add A Note</strong>
<div>
  <div class="card-notes-structure">
    <%= simple_form_for(Note.new) do |f| %>
      <div class='comments-area d-flex justify-content-around w-100'>
        <%= f.input :comment %>
      </div>
      <div class="radio-btn d-flex justify-content-around">
        <div>
          <%= f.input :priority, as: :radio_buttons, collection: ['High', 'Medium', 'Low'] %>
        </div>
        <div>
          <%= f.input :status, as: :radio_buttons, collection: ['Closed', 'In Progress', 'Pending']  %>
        </div>
      </div>
      <div>
        <%= f.input :due_date %>
      </div>
      <%= f.button :submit, "Save Note", class: "btn btn-yellow", data: { confirm: 'Your note has been saved' }%>
    <% end %>
  </div>
</div>

